# Resume Builder Service Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/resume_builder
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/resume_builder_test

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
MAIN_API_URL=http://localhost:8000/api/v1
MAIN_API_TIMEOUT=10

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SERVICE_NAME=resume-builder-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8001

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8001"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FILE HANDLING
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf","doc","docx"]
PDF_TEMPLATE_PATH=./templates/pdf/
STATIC_FILES_PATH=./static/

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# ATS ANALYSIS CONFIGURATION
# =============================================================================
ATS_ANALYSIS_ENABLED=true
ATS_KEYWORD_CACHE_TTL=3600
ATS_SCORE_HISTORY_LIMIT=50
ATS_BENCHMARK_UPDATE_INTERVAL=86400

# =============================================================================
# PDF GENERATION
# =============================================================================
PDF_GENERATION_TIMEOUT=30
PDF_MAX_FILE_SIZE=5242880

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# SECURITY
# =============================================================================
SECURE_HEADERS=true
ENABLE_HTTPS_REDIRECT=false
SESSION_TIMEOUT=1800

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ATS_ANALYSIS=true
ENABLE_BULK_OPERATIONS=true
ENABLE_EXPORT_TRACKING=true
ENABLE_SCORE_HISTORY=true
ENABLE_INDUSTRY_BENCHMARKS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true
# FROM_EMAIL=noreply@jobreadynow.com

# =============================================================================
# CLOUD STORAGE (Optional - for production file storage)
# =============================================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2
# S3_BUCKET_NAME=resume-builder-files
# CLOUDFRONT_DOMAIN=cdn.jobreadynow.com


# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable auto-reload in development
AUTO_RELOAD=true
# Enable debug toolbar
DEBUG_TOOLBAR=true
# Log SQL queries in development
LOG_SQL_QUERIES=false

# =============================================================================
# BACKUP CONFIGURATION (Production)
# =============================================================================
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=resume-builder-backups

# =============================================================================
# SCALING CONFIGURATION (Production)
# =============================================================================
# WORKER_PROCESSES=4
# WORKER_CONNECTIONS=1000
# MAX_REQUESTS_PER_WORKER=10000
# WORKER_TIMEOUT=30

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CA_PATH=/path/to/ca.pem